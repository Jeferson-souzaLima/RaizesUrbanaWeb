<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RaizesUrbanaWeb</title>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
    <link rel="stylesheet" href="~/RaizesUrbanaWeb.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    @* <link rel="icon" type="image/x-icon" href=""> *@


        <link href="~/css/site.css" rel="stylesheet" />
        @RenderSection("Styles", false)
    

    <style>
        /* Estilo do cabeçalho */
        header { 
            background-color: #0E5617; /* Cor de fundo do cabeçalho */
            color: white;
            font-family: 'Josefin Sans', sans-serif;
        }

        /* Logo no canto esquerdo */
        .navbar-brand {
            font-size: 1.5rem;
            color: white;
        }

        /* Flexbox para centralizar os itens de navegação */
        .navbar-collapse {
            display: flex;
            justify-content: center; /* Centraliza os links na barra de navegação */
            width: 100%; /* Garante que o conteúdo da navbar ocupe toda a largura */
        }

        .navbar-nav {
            display: flex; /* Usando flex para controlar a disposição dos links */
            justify-content: center; /* Centraliza os itens de navegação */
            width: 100%;
        }

            /* Itens de navegação */
            .navbar-nav .nav-link {
                color: white !important; /* Garante que a cor do texto seja branca */
                text-transform: uppercase; /* Coloca o texto em caixa alta */
                font-weight: normal; /* Remove o negrito */
                font-size: 1.1rem; /* Ajuste do tamanho da fonte */
                text-decoration: none; /* Remove o sublinhado por padrão */
                padding: 15px 50px; /* Aumenta o espaçamento entre os links */
                margin: 0 25px; /* Aumenta a margem entre os links */
            }

                /* Cor ao passar o mouse */
                .navbar-nav .nav-link:hover {
                    color: #FFD700; /* Cor dourada para quando o mouse passar por cima */
                    text-decoration: underline; /* Adiciona sublinhado quando passar o mouse */
                }

        /* Ajuste do botão de navegação para telas menores */
        .navbar-toggler-icon {
            background-color: white; /* Muda a cor do ícone do menu para branco */
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/img/LogoRaizesUrbanas.png" alt="Logo" style="width: 150px; height: auto;" />
            </a>

            <!-- Botão de navegação (para telas pequenas) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links de navegação -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/SobreNos">Sobre Nós</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Entregas">Entregas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contato</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - RaizesUrbanaWeb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
