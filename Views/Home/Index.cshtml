@{
    ViewData["Title"] = "Início";
}

<link href="~/css/index.css" rel="stylesheet" />


<div class="welcome-section">
    <div class="welcome-message">
        <h1>Bem Vindo à</h1>
        <h2>Raízes Urbana</h2>
        <p>"Alfaceja bem-vindo à Raízes Urbana! Aqui, cultivamos sabor e frescor que vão fazer você sorrir!"</p>
        <!-- Botão Comprar Agora -->
        <button class="btn-comprar-agora" data-bs-toggle="modal" data-bs-target="#cadastroModal">
            Comprar Agora
        </button>
    </div>
</div>

<!-- Modal de Cadastro -->
<div class="modal fade" id="cadastroModal" tabindex="-1" aria-labelledby="cadastroModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cadastroModalLabel">Crie sua conta!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="@Url.Action("Cadastrar", "Home")">
                    <!-- Nome -->
                    <div class="mb-3">
                        <input type="text" class="form-control" id="nome" name="nome" placeholder="Seu Nome" required />
                    </div>
                    <!-- E-mail -->
                    <div class="mb-3">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Seu E-mail" required />
                    </div>
                    <!-- Senha -->
                    <div class="mb-3">
                        <input type="password" class="form-control" id="senha" name="senha" placeholder="Sua Senha" required />
                    </div>
                    <!-- Confirmar Senha -->
                    <div class="mb-3">
                        <input type="password" class="form-control" id="confirmarSenha" name="confirmarSenha" placeholder="Confirmar Senha" required />
                    </div>
                    <!-- Botão de Cadastro -->
                    <button type="submit" class="btn btn-success">Cadastrar</button>
                </form>
                <!-- Link para Login -->
                <div class="mt-3">
                    <button class="btn btn-link" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#loginModal">
                        Já tem uma conta? Fazer login
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Login -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Faça seu Login</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="@Url.Action("Login", "Home")">
                    <!-- E-mail -->
                    <div class="mb-3">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu E-mail" required />
                    </div>
                    <!-- Senha -->
                    <div class="mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Digite sua Senha" required />
                    </div>
                    <!-- Botão Entrar -->
                    <button type="submit" class="btn btn-success">Entrar</button>
                </form>
            </div>
        </div>
    </div>
</div>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script type="text/javascript">
        // Verifica se há uma mensagem de sucesso ou erro no TempData e exibe usando Toastr
        @if (TempData["MensagemSucesso"] != null)
        {
            <text>
                toastr.success('@TempData["MensagemSucesso"]');
            </text>
        }

        @if (TempData["MensagemErro"] != null)
        {
            <text>
                toastr.error('@TempData["MensagemErro"]');
            </text>
        }
    </script>
}

